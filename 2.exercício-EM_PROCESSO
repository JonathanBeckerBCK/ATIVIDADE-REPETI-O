programa
{
	inclua biblioteca Util
	inclua biblioteca Matematica
	funcao inicio()
	{
		escreva("2. Faça um programa que leia 5 números e informe a soma e a média dos números.")
		
		inteiro num1, num2, num3, num4, num5
		leia(num1, num2, num3, num4, num5)
		escreva("\n",num1," + ",num2," + ",num3," + ",num4," + ",num5," = ",num1 + num2 + num3 + num4 + num5)
	}
}
