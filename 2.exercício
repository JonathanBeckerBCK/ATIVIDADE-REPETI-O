programa
{
	
	funcao inicio()
	{
		escreva("2. Faça um programa que leia 5 números e informe a soma e a média dos números.")
		inteiro soma = 0, media, numero

		para(inteiro i=0; i < 5; i++)
		{
		escreva("informe um numero",i+1," = ")
		leia(numero) 
		soma = soma + numero
		}
		media = soma / 5
		escreva("a soma é ", soma ,"\n")
		escreva("a media é ", media)
	}
}
